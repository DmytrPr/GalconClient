{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "types": [
      "node",
      "vite/client",
    ],
    "target": "es2016",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable",
      "esnext",
      "WebWorker"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "declaration": true
  },
  "include": [
    "src",
    ".eslintrc.js",
    "vite.config.ts",
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}